alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias vi='vim'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias hvim='(cd && vim)'

function take {
  mkdir $1 && cd $1
}
function o {
  (nohup google-chrome-stable --app="file://`realpath $1`" &) &> /dev/null
}
function alert {
  mutt -s "$1" me <<< "This message was automatically generated by a call to alert."
}
function g {
  grep -r "$1" *
}
function f {
	find . -iname "*$1*"
}
function h {
	history | grep "$1"
}

alias j='jobs'
alias todo='vim ~/Dropbox/todo.txt'
alias pp='powerPercentage'

source ~/bin/dotfiles/bash/webapps
